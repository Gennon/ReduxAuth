{
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "indent": [1,2]
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  }
}